extends ../../layouts/defaultDetail.pug
include ../../mixins/Alert

block content  
    +alert-success("5000")
    .container.my-3
        .row 
            .col-12 
                h4 Giỏ hàng
        .row
            .col-12
                table(
                    class="table table-hover table-bordered"
                )
                    thead 
                        tr 
                            th STT 
                            th Hình ảnh
                            th Tên
                            th Giá
                            th Số lượng 
                            th Tổng tiền
                            th Hành động

                    tbody 
                        if(cart.products.length > 0) 
                            each pro,idx in cart.products
                                tr 
                                    td  #{idx + 1}
                                    td 
                                        img(src=pro.productInfor.thumbnail, alt="anh sp", width= "100px", height= "auto")
                                    td 
                                        a(href=`/products/detail/${pro.product_id}`) #{pro.productInfor.title}
                                    td #{pro.productInfor.newPrice}
                                    td 
                                        input(
                                            type="number",
                                            value= pro.quantity,
                                            style="width: 60px",
                                            min="1",
                                            product-id= pro.product_id
                                            name="quantity"
                                        )
                                    td #{pro.totalPrice}
                                    td  
                                        a(
                                            href=`/cart/delete/${pro.product_id}`
                                            class="btn btn-danger btn-sm" 
                                            btn-delete
                                        ) Xóa 
                        else 
                            p Không có sản phẩm nào
                h3(class="text-end") Tổng đơn hàng : #{cart.total}
                div(class="text-end mt-3")
                    a(href="/checkout" class="btn btn-success" ) Thanh toán 

    script(src="/js/cart.js")