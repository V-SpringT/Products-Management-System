extends ../../layouts/defaultDetail.pug
include ../../mixins/Alert

block content  
    +alert-success("5000")
    .container.my-3
        .row 
            .col-12 
                h4 Thanh toán
        .row
            .col-12
                table(
                    class="table table-hover table-bordered"
                )
                    thead 
                        tr 
                            th STT 
                            th Hình ảnh
                            th Tên
                            th Giá
                            th Số lượng 
                            th Tổng tiền

                    tbody 
                        each pro,idx in cart.products
                            tr 
                                td  #{idx + 1}
                                td 
                                    img(src=pro.productInfor.thumbnail, alt="anh sp", width= "100px", height= "auto")
                                td 
                                    a(href=`/products/detail/${pro.product_id}`) #{pro.productInfor.title}
                                td #{pro.productInfor.newPrice}
                                td #{pro.quantity}
                                td #{pro.totalPrice}
                h3(class="text-end") Tổng đơn hàng : #{cart.total}

        if(cart.products.length > 0)
            .row 
                .col-12 
                    .card.p-4.my-4 
                        form(
                            action="/checkout/order"
                            method="POST"
                        )
                            div(class="form-group")
                                label(for="fullName") Họ tên
                                input(
                                    type="text"
                                    class="form-control"
                                    id="fullName"
                                    name="fullName"
                                    required
                                )
                            div(class="form-group")
                                label(for="phone") Số điện thoại
                                input(
                                    type="text"
                                    class="form-control"
                                    id="phone"
                                    name="phone"
                                    required
                                )
                            div(class="form-group")
                                label(for="address") Địa chỉ
                                input(
                                    type="text"
                                    class="form-control"
                                    id="address"
                                    name="address"
                                    required
                                )
                            div(class="form-group")
                                button(
                                    type="submit"
                                    class="btn btn-success btn-block"
                                ) Đặt hàng

    script(src="/js/cart.js")