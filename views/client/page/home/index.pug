extends ../../layouts/default
include ../../mixins/box-head
block main 
    h1 Trang chu

    .section-products-featured.container.my-3 
        .row 
            .col-12 
                +box-head("Sản phẩm nổi bật")
        .row 
            each item in featuredProducts
                .col-3.mb-3 
                    div.frame 
                        .product-item 
                            img(src=item.thumbnail, alt="")
                        .inner-content
                            .inner-title 
                                a(
                                    href=`/products/${item.slug}`
                                    style="text-decoration: none;"
                                ) #{item.title}
                            .inner-price-new #{item.newPrice}$
                            .inner-price-old #{item.price}$
                            .inner-discount -#{item.discountPercentage}%  

    
