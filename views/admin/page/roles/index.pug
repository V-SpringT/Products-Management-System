extends ../../layout/default.pug 

block main 
    if(roleMDW.permissions.includes("roles_view"))
        h1(class="mb-4") Nhóm quyền

        .card.mb-3 
            .card-header Danh sách
            .card-body 
                .row 
                    .col-8 
                    .col-4.text-right 
                        if(roleMDW.permissions.includes("roles_create"))
                            a(
                                href=`${prefixAdmin}/roles/create`
                                class="btn btn-outline-success"
                            ) + Thêm mới
                table(
                    class="table table-hover table-sm"
                )
                    thead
                        tr
                            th STT
                            th Nhóm quyền
                            th Mô tả
                            th Hành động
                    tbody
                        if(roles.length > 0)
                            each item, index in roles 
                                tr 
                                    td #{index+1} 
                                    td #{item.title} 
                                    td !{item.description} 
                                    td  
                                        a(
                                            class="btn btn-secondary btn-sm"
                                            href=`${prefixAdmin}/roles/detail/${item.id}`
                                        ) Chi tiết 
                                        if(roleMDW.permissions.includes("roles_edit"))
                                            a(
                                                class="btn btn-warning btn-sm ml-1"
                                                href=`${prefixAdmin}/roles/edit/${item.id}`
                                            ) Sửa 
                                        if(roleMDW.permissions.includes("roles_delete"))
                                            button(class="btn btn-danger btn-sm ml-1" btn-delete data-id= item.id) Xóa
                        else            
                            tr
                                td(
                                    colspan="4" class="text-center"
                                )  Chưa có nhóm quyền nào được tạo

                            