extends ../../layout/default.pug 
include ../../mixins/Alert
block main
    +alert-error(5000)
    +alert-success(5000)

    h1(class="mb-4") Cập nhật thông tin cá nhân

    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
        class="row"
    )
        .col-6
            div(class="form-group")
                label(for="title") Họ tên *
                input(
                    type="text"
                    class="form-control"
                    id="fullName"
                    name="fullName"
                    value=userMDW.fullName
                    required
                )
            div(class="form-group")
                label(for="email") Email *
                input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    value=userMDW.email
                    required
                )
            div(class="form-group")
                label(for="phone") Số điện thoại 
                input(
                    type="text"
                    class="form-control"
                    id="phone"
                    name="phone"
                    value=userMDW.phone
                )
        .col-6 
            div(
                class="form-group"
                upload-image
            )
                label(for="avatar") Ảnh 
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    style="display: block"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    src=userMDW.avatar
                    alt=""
                    upload-image-preview
                    class="image-preview"
                    )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
