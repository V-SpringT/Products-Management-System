mixin pagination(pagination)
    nav.d-flex.justify-content-center
        ul(class="pagination")
            if(pagination.currentPage > 1)
                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination= 1
                        ) Trang đầu
            if(pagination.totalPage<=5)
                - for(var i=1;i<=pagination.totalPage;i+=1)
                    li(class= `page-item ${pagination.currentPage == i ? "active" : ""}` )
                        button(
                            class="page-link" 
                            button-pagination= i
                        ) #{i}
            else    
                if pagination.currentPage == 1 || pagination.currentPage == 2
                    - for(var i=1;i<=5;i+=1)
                        li(class= `page-item ${pagination.currentPage == i ? "active" : ""}` )
                            button(
                                class="page-link" 
                                button-pagination= i
                            ) #{i}
                else if pagination.currentPage == pagination.totalPage || pagination.currentPage == pagination.totalPage-1
                    - for(var i=pagination.totalPage-4;i<=pagination.totalPage;i+=1)
                        li(class= `page-item ${pagination.currentPage == i ? "active" : ""}` )
                            button(
                                class="page-link" 
                                button-pagination= i
                            ) #{i}
                else    
                    - for(var i=pagination.currentPage-2;i<=pagination.currentPage+2;i+=1)
                        li(class= `page-item ${pagination.currentPage == i ? "active" : ""}` )
                            button(
                                class="page-link" 
                                button-pagination= i
                            ) #{i}

            if(pagination.currentPage  < pagination.totalPage)
                li(class="page-item")
                    button(
                        class="page-link"
                        button-pagination=pagination.totalPage
                    ) Trang cuối